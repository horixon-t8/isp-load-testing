{
  "name": "isp-load-testing",
  "version": "1.0.0",
  "description": "K6 load testing suite for ISP API endpoints",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "test": "node cli-runner.js",
    "test:help": "node cli-runner.js --help",
    "test:select": "node cli-runner.js",
    "test:homepage": "node cli-runner.js --scene homepage",
    "test:quotation": "node cli-runner.js --scene quotation",
    "test:light": "node cli-runner.js --users 5 --duration 1m",
    "test:heavy": "node cli-runner.js --users 50 --duration 5m",
    "test:spike": "node cli-runner.js --users 100 --duration 30s",
    "clean": "rm -rf reports/*.html reports/*.csv summary.json",
    "setup": "mkdir -p reports && echo 'Reports directory created'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "quality": "npm run lint && npm run fmt:check"
  },
  "keywords": [
    "k6",
    "load-testing",
    "performance",
    "api-testing",
    "isp"
  ],
  "author": "ISP QA Team",
  "private": true,
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "inquirer": "^12.9.2"
  },
  "engines": {
    "k6": ">=0.45.0"
  }
}
